{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "jsx": "react-jsx",
        "lib": ["dom", "es2015", "es2017", "es2020"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false
    },
    "include": [
        "./utils/**/*",
        "../shared-data/contexts/tutor-contexts.ts",
        "../shared-data/contexts/user-state.tsx"
    ]
}
